<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D7BB0B6"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".NewNotesActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Judul Catatan"
        android:textColor="#057280"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#00BCD4"
        android:textColorHint="#3395A3" />

    <TextView
        android:id="@+id/tvIsiCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:text="Isi Catatan"
        android:textColor="#057280"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#00BCD4"
        android:textColorHint="#3395A3" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#05A2B6"
        android:onClick="saveNotes"
        android:text="Simpan Catatan"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B80000"
        android:onClick="cancle"
        android:text="Cancle"
        android:textSize="16sp" />
</LinearLayout>